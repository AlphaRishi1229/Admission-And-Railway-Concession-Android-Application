<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        card_view:cardBackgroundColor="@color/grey"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="9dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rv_pass_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/rv_phone"
                android:layout_marginTop="16dp"
                android:text="Pass Code"
                android:textColor="@color/red"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/rv_stu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/rv_pass_period"
                android:layout_marginStart="14dp"
                android:text="Admission No"
                android:textColor="@color/darkOrange"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="Roll No"
                android:textColor="@color/darkOrange"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/rv_pass_code"
                android:layout_marginEnd="20dp"
                android:text="Station Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_pass_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rv_station_name"
                android:layout_centerVertical="true"
                android:text="Pass Type"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_pass_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/rv_station_name"
                android:layout_marginBottom="22dp"
                android:text="Pass Period"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>