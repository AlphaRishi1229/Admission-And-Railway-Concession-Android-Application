<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        card_view:cardBackgroundColor="@color/grey"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="9dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rv_stu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Admission Number"
                android:textColor="@color/red"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/rv_new_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/rv_stu_id"
                android:text="Student Name"
                android:textColor="@color/darkOrange"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/rv_new_name"
                android:text="Roll No"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rv_sem"
                android:layout_centerHorizontal="true"
                android:text="Stream Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rv_sem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="112dp"
                android:text="Stream Sem"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="66dp"
                android:background="@color/lightOrange" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>